{
    "configurations": [
        {
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "name": "Debug with OpenOCD",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "gdbPath": "arm-none-eabi-gdb",
            "device": "RP2040",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "/home/banshee/pico/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "searchDir": [
                "/home/banshee/pico/openocd/tcl/"
            ],
            "runToMain": true,
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
            "postRestartCommands": [
                "break main",
                "continue"
            ],
            "showDevDebugOutput": "none"
        },
        {
            "cwd": "${workspaceFolder}",
            "executable": "./build/starfish.elf",
            "name": "Debug with JLink",
            "request": "launch",
            "type": "cortex-debug",
            "device": "RP2040_M0_0",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "jlink",
            "serverpath": "JLinkGDBServerCLExe",
            "interface": "swd",
            "runToMain": true,
            "svdFile": "/home/banshee/pico/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "armToolchainPath": "/usr/bin"
        }
    ]
}